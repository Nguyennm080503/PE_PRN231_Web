@page "{id}"
@model PE_Web.Pages.Painting.EditModel

@{
    ViewData["Title"] = "Edit Painting";
}

<h1>Edit Painting</h1>

<h4>Watercolor Painting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Painting.PaintingId" />

            <div class="form-group">
                <label asp-for="Painting.PaintingName" class="control-label"></label>
                <input asp-for="@Model.Painting.PaintingName" class="form-control" required />
                <span asp-validation-for="Painting.PaintingName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Painting.PaintingDescription" class="control-label"></label>
                <input asp-for="@Model.Painting.PaintingDescription" class="form-control" />
                <span asp-validation-for="Painting.PaintingDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Painting.PaintingAuthor" class="control-label"></label>
                <input asp-for="@Model.Painting.PaintingAuthor" class="form-control" />
                <span asp-validation-for="Painting.PaintingAuthor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Painting.Price" class="control-label"></label>
                <input asp-for="@Model.Painting.Price" class="form-control" />
                <span asp-validation-for="Painting.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Painting.PublishYear" class="control-label"></label>
                <input asp-for="@Model.Painting.PublishYear" class="form-control" />
                <span asp-validation-for="Painting.PublishYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Painting.StyleName" class="control-label"></label>
                <select asp-for="Painting.StyleID" class="form-control" asp-items="@(new SelectList(Model.Style, "StyleId", "StyleName", Model.Painting.StyleID))"></select>
                <span asp-validation-for="Painting.StyleID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @TempData["MessageSuccess"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalLabel">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @TempData["MessageError"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="/Painting/Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var messageSuccess = '@TempData["MessageSuccess"]';
            var messageError = '@TempData["MessageError"]';

            if (messageSuccess) {
                $('#successModal').modal('show');
            }

            if (messageError) {
                $('#errorModal').modal('show');
            }

            $('#successModal .btn-secondary').click(function () {
                $('#successModal').modal('hide');
            });

            $('#errorModal .btn-secondary').click(function () {
                $('#errorModal').modal('hide');
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
