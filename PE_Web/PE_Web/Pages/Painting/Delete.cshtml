@page
@model PE_Web.Pages.Painting.DeleteModel

@{
    ViewData["Title"] = "Delete Painting";
}

<h1>Delete Painting</h1>

<h3>Are you sure you want to delete this painting?</h3>
<div>
    <h4>Watercolor Painting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Painting Name :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.PaintingName
        </dd>
        <dt class="col-sm-2">
            Description :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.PaintingDescription
        </dd>
        <dt class="col-sm-2">
            Author :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.PaintingAuthor
        </dd>
        <dt class="col-sm-2">
            Price :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.Price
        </dd>
        <dt class="col-sm-2">
            Publish Year :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.PublishYear
        </dd>
        <dt class="col-sm-2">
            Created Date :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.CreatedDate
        </dd>
        <dt class="col-sm-2">
            Style :
        </dt>
        <dd class="col-sm-10">
            @Model.Painting.StyleName
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Painting.PaintingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Painting/Index">Back to List</a>
    </form>
</div>

